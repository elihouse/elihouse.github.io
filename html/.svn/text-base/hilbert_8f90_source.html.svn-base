<a name="l00092"></a>00092     b1 = 0
<a name="l00093"></a>00093     <span class="keyword">if</span> (i_bit_mask(3*i+1)) b1 = 1
<a name="l00094"></a>00094     b0 = 0
<a name="l00095"></a>00095     <span class="keyword">if</span> (i_bit_mask(3*i)) b0 = 1
<a name="l00096"></a>00096     sdigit = b2*4 + b1*2 + b0
<a name="l00097"></a>00097     nstate = state_diagram (sdigit, 0, cstate)
<a name="l00098"></a>00098     hdigit = state_diagram (sdigit, 1, cstate)
<a name="l00099"></a>00099     i_bit_mask(3*i+2) = btest(hdigit, 2)
<a name="l00100"></a>00100     i_bit_mask(3*i+1) = btest(hdigit, 1)
<a name="l00101"></a>00101     i_bit_mask(3*i  ) = btest(hdigit, 0)
<a name="l00102"></a>00102     cstate = nstate
<a name="l00103"></a>00103   <span class="keyword">enddo</span>
<a name="l00104"></a>00104 
<a name="l00105"></a>00105   <span class="comment">! save Hilbert key as double precision real</span>
<a name="l00106"></a>00106   hk = 0.0
<a name="l00107"></a>00107   <span class="keyword">do</span> i=0,3*order-1
<a name="l00108"></a>00108     b0 = 0
<a name="l00109"></a>00109     <span class="keyword">if</span> (i_bit_mask(i)) b0 = 1
<a name="l00110"></a>00110     hk = hk + dble(b0)*dble(2)**i
<a name="l00111"></a>00111   <span class="keyword">end do</span>
<a name="l00112"></a>00112 
<a name="l00113"></a>00113 <span class="keyword">end subroutine HKey3</span>
